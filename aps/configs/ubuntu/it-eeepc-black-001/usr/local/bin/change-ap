#!/bin/bash

if [ $# -lt 3 ]
then
	echo "usage : $0 <wpa-encryption> <channel> <bandwidth>"
	exit 1
fi

# symlink to correct hostapd.conf file
ln -sfv /home/adamiaonr/workbench/wifi-vehicles/aps/configs/ubuntu/it-eeepc-black-001/etc/hostapd/hostapd.conf.$1.$2.$3 /etc/hostapd/hostapd.conf
# restart hostapd (and everything else...)
/etc/init.d/networking restart

exit 0
