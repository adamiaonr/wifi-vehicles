#!/bin/bash

# symlink to correct hostapd.conf file
ln -sfv /home/adamiaonr/workbench/wifi-vehicles/aps/configs/ubuntu/etc/hostapd/hostapd.conf.$1.$2.$3 /etc/hostapd/hostapd.conf
/etc/init.d/networking restart
# change channel on the monitoring iface to that of the ap
bw=$3
if [ $3 -gt 20 ]
then
    bw=$bw+
fi
python /home/adamiaonr/workbench/wifi-vehicles/wifi-assist/src/data-collection/cbt.py --iface wlx24050faaab5d --set-monitor-mode '"'$2:HT$bw'"'
