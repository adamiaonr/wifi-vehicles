#!/bin/bash

if [ $# -lt 2 ]
then
	echo "usage : $0 <protocol> <trace-nr> (if protocol = 'udp': <udp-bitrate>)"
	exit 1
fi

# kill outstanding scritps
pkill -f iperf3-to-mobile
pkill -f get-ntp-accuracy

# create dirs (if not available already)
output_dir=/home/adamiaonr/workbench/range-tests/vehicular-traces/trace-$2/$(iw wlx24050f6dae36 info | awk '/channel/ {print $2}')
mkdir -p "$output_dir"

# handle bitrate arg
bitrate="X"
if [ "$1" == "udp" ]
then

	if [ $# -lt 3 ]
	then
		echo "usage : $0 <protocol> <trace-nr> <udp-bitrate>"
		exit 1
	fi

	bitrate=$3
fi

# run scripts
python /home/adamiaonr/workbench/wifi-vehicles/wifi-assist/src/data-collection/iperf3-to-mobile.py --restart-ntp --protocol $1 --bitrate $bitrate --ip-server 10.10.10.111 --port 5204 --iface wlx24050f6dae36 --output-dir "$output_dir" &
python /home/adamiaonr/workbench/wifi-vehicles/wifi-assist/src/data-collection/get-ntp-accuracy.py --output-dir "$output_dir" &

exit 0
