config wifi-device  radio1
	option type mac80211
	option path	'pci0000:00/0000:00:00.0'
	option channel 'auto'
	option hwmode '11a'
	option country 'PT'
	option log_level '0'

config wifi-iface
	option device 'radio1'
	option network 'wwan'
	option mode 'sta'
	option ssid 'nikola-tesla'
	option bgscan 'simple:10:-65:60'
