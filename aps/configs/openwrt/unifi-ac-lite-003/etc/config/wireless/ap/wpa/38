config wifi-device 'radio1'
	option type 'mac80211'
	option path 'pci0000:00/0000:00:00.0'
	option channel '38'
	option hwmode '11a'
	option htmode 'VHT40'
	option txpower '20'
	option country 'PT'
	option log_level '0'

config wifi-iface
	option device 'radio1'
	option network 'wwan'
	option mode 'ap'
	option ssid 'nikola-tesla'
	option encryption 'psk2'
	option key 'xpto12x1'

