config wifi-device 'radio1'
	option type 'mac80211'
	option path 'pci0000:00/0000:00:00.0'
	option channel '40'
	option hwmode '11a'
	option htmode 'VHT20'
	option txpower '20'
	option country 'PT'
	option log_level '0'

config wifi-iface
	option device 'radio1'
	option network 'wwan'
	option mode 'ap'
	option ssid 'leslie-lamport'
	option encryption 'none'

