#!/bin/sh

if [ $# -lt 3 ]
then
	echo "usage : $0 <trace-nr> <port> <filename>"
	exit 1
fi

trace_nr=$1
port=$2
filename=$3

# trace directory
output_dir="/tmp/vehicular-traces/$HOSTNAME/trace-$trace_nr"
# restart consumer
stdbuf -oL -eL consumer "$port" > "$output_dir/$filename" &> /dev/null &

exit 0
