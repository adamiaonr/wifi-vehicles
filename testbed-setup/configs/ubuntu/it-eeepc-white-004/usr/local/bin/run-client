#!/bin/bash

if [ $# -lt 2 ]
then
	echo "usage : $0 <trace-nr> <bitrate>"
	echo "options : "
	echo "    <trace-nr> : nr. of trace to use in logs. 3 digit number w/ leading zeroes, e.g.: '041'"
	echo "    <bitrate> : target bitrate in Mbps"
	exit 1
fi

trace_nr=$1
bitrate=$2

# create dirs (if not available already)
output_dir=$HOME/workbench/vehicular-experiments/trace-$trace_nr
if [ ! -d "$output_dir" ]
then
	mkdir -p "$output_dir"
fi
# update output-dir.txt w/ the current output_dir
echo "$output_dir" > $HOME/workbench/vehicular-experiments/output-dir.txt

# this script handles 1 main client :
#	- 802.11ad : via a talon ad7200, accessible via the eth iface
/usr/local/bin/handle-remote-client $trace_nr &

# extract accuracy of time synch via ntp w/ local server
python $HOME/workbench/wifi-vehicles/data-collection/get-ntp-accuracy.py --output-dir "$output_dir" &
# extract cpu stats
$HOME/workbench/wifi-vehicles/data-collection/get-cpu.sh $trace_nr "$output_dir" &
# report status to webserver
#pkill -f report-status
#python $HOME/workbench/wifi-vehicles/data-collection/report-status.py --ip 10.10.10.113 --port 8081 --output-dir $HOME/workbench/vehicular-experiments &> /dev/null &

exit 0
