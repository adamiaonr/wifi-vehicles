#!/bin/bash

# kill server on b1
ssh -i $HOME/.ssh/it it@10.10.10.113 "kill-servers"
# kill main clients:
#	- n (local)
kill-client
#	- ac 1, ac 2 & ad
ssh -i ~/.ssh/it it@10.10.10.111 "kill-client"

# kill background clients (if applicable)
#	- n & ac 1
ssh -i ~/.ssh/it it@10.10.10.122 "kill-client"
ssh -i ~/.ssh/it it@10.10.10.114 "kill-client"
#	- ac 2 & ad
kill-bckgrnd-client

exit 0
