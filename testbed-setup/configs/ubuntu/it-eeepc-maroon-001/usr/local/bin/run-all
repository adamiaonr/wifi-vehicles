#!/bin/bash

if [ $# -lt 1 ]
then
    echo "usage : $0 <trace-nr>"
    exit 1
fi

trace_nr=$1

# start server on b1
ssh -i ~/.ssh/it it@10.10.10.113 "sudo run-servers $trace_nr &> /dev/null < /dev/null &"
# start main client and monitor on tp-0x and tp-0y via w4
# 1 Gbps bitrate by default
BITRATE=1000
ssh -i ~/.ssh/it it@10.10.10.111 "sudo run-client $trace_nr $BITRATE &> /dev/null &"

exit 0